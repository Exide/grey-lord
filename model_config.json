{
  "model": {
    "vocab_size": 262,
    "n_positions": 8192,
    "n_embd": 128,
    "n_layer": 4,
    "n_head": 4,
    "dropout": 0.1,
    "attention_dropout": 0.1,
    "resid_dropout": 0.1
  },
  "training": {
    "default_epochs": 50,
    "default_batch_size": 32,
    "default_lr": 3e-4,
    "default_max_seq_len": 1024,
    "default_val_split": 0.25,
    "default_patience": 3,
    "weight_decay": 0.01,
    "warmup_steps": 100,
    "gradient_clip": 1.0,
    "label_smoothing": 0.1
  },
  "data": {
    "default_data_dir": "data/training_data_v1",
    "default_file_glob": "*"
  },
  "vocab": {
    "vocab_to_int_file": "data/vocab_to_int.json",
    "int_to_vocab_file": "data/int_to_vocab.json",
    "pad_token": "<|pad|>"
  }
}
